/**index.wxss**/
.userinfo {
  position: absolute;
  top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: right;
  color: white;
  background-color: #2D52D5;
  border-radius: 10px;
}
.pic{
  width:600rpx;
  height:500rpx;
  border-radius: 10px;
}
.name{
  width:440rpx;
  padding:15rpx;
  margin: 15rpx;

}
.showQRCode{
  align-self: center;
  font-size: 25rpx;
  padding: 5px;
  padding-left:15px;
  padding-right:15px;
  margin-bottom: 30rpx;
  background-color: #658DE3;
  border-radius: 10rpx;
}
.english{
  border-bottom: 1px solid white;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.colorBar{
  width:100%;
  height: 200rpx;
  background-color: #2D52D5;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
}
.history{
  position: absolute;
  background-color: #fff;
  top: 870rpx;
  width:600rpx;
  border-radius: 20rpx;
}
.line{
  padding: 30rpx;
  font-size: 28rpx;
  display:flex;
  justify-content: space-between;
  border-bottom: 1px solid #E7EAF2;
}
.right{
  color:#B7B7B8;
}
.container{
  height: 100vh;
  background-color: #F5F7FE;
  position: relative;
}

.bottomLine{
  width:100vw;
  height: 100rpx;
  position:absolute;
  bottom: 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color:#9A9A9A;
  background-color: #fff;
  border-top: 1px solid #E7EAF2;
  font-size: 28rpx;
}
.bottomLeft{
  color:#2C51D8;
}